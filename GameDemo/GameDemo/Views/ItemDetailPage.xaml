<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameDemo.Views.ItemDetailPage"
             Title="{Binding Title}">
	<StackLayout Spacing="20" Padding="15">
		<Label x:Name="GameName" FontSize="Medium"/>
        <Image x:Name="Image" HeightRequest="150" Aspect="AspectFit"></Image>
        <Label Text="{Binding SelectedGame.Description}" FontSize="Small"/>
    </StackLayout>
</ContentPage>